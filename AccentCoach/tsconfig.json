{
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,               // <- stops TS from writing .js and .d.ts
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["DOM", "ES2020"]
  },
  "include": ["src"]
}




